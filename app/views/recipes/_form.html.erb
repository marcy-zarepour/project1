<%= form_for @recipe do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :required => true %>
    </div>

        <div class="form-group">
        <%= f.label :time %>
        <%= f.text_field :time %>
    </div>

    <div class="form-group">
        <%= f.label :serving %>
        <%= f.text_field :serving %>
    </div>

    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>

    <div class="form-group">
        <%= f.label :image  %>
        <%= f.url_field :image  %>
    </div>
    <div class="form-group">
        <%= f.label :category_id, "Select a category:"%>
        <%= f.select :category_id, Category.pluck(:name, :id) %>
    <div>

    <%= f.submit %>
<% end %>





